-- [[ Unique Hub - Custom UI Edition ]] --

-- 1. ระบบกันแบนและกันหลุด (รันอัตโนมัติ)
pcall(function()
    -- Anti-AFK
    game:GetService("Players.LocalPlayer").Idled:Connect(function()
        game:GetService("VirtualUser"):Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        wait(1)
        game:GetService("VirtualUser"):Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    end)
    
    -- Anti-Cheat Bypass
    local mt = getrawmetatable(game)
    setreadonly(mt, false)
    local old = mt.__namecall
    mt.__namecall = newcclosure(function(self, ...)
        if getnamecallmethod() == "FireServer" and (self.Name == "AdminCheck" or self.Name == "Detection") then
            return nil
        end
        return old(self, unpack({...}))
    end)
    setreadonly(mt, true)
end)

-- 2. สร้าง UI ตามแบบรูปภาพ (ใช้โทนสีแดง-ดำ)
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "UNIQUE HUB",
    SubTitle = "by bbrw706",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = false, -- ปิดความใสเพื่อให้สีชัดแบบในรูป
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl -- ปุ่มเปิด/ปิดเมนู
})

-- ปรับแต่งสีให้เป็นสีแดงตามรูป (โทน Red/Black)
Fluent:SetTheme("Dark")

-- 3. ช่องที่ 1: ออโต้ฟาร์ม (Main Tab)
local Tabs = {
    Main = Window:AddTab({ Title = "Main Farm", Icon = "home" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

local Toggle = Tabs.Main:AddToggle("AutoFarm", {Title = "Auto Farm Level", Default = false })

Toggle:OnChanged(function()
    _G.AutoFarm = Fluent.Options.AutoFarm.Value
    if _G.AutoFarm then
        -- รันสคริปต์จากลิงก์ของคุณ
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/bbrw706/-nuengdiaw/refs/heads/main/local"))()
        end)
    end
end)

-- 4. ช่องที่ 2: กันหลุด/กันแบน (Settings Tab)
Tabs.Settings:AddParagraph({
    Title = "Protection System",
    Content = "Anti-Ban และ Anti-AFK ทำงานอยู่ตลอดเวลา"
})

Tabs.Settings:AddButton({
    Title = "Server Hop",
    Description = "ย้ายเซิร์ฟเวอร์ทันที",
    Callback = function()
        game:GetService("TeleportService"):Teleport(game.PlaceId)
    end
})

-- แจ้งเตือนเมื่อรันสำเร็จ
Fluent:Notify({
    Title = "Unique Hub",
    Content = "สคริปต์ติดตั้งระบบกันแบนเรียบร้อยแล้ว",
    Duration = 5
})
