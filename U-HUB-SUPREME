local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

-- ‡πÅ‡∏Å‡πâ‡∏à‡∏∏‡∏î‡∏ï‡∏≤‡∏¢: ‡πÉ‡∏ä‡πâ‡∏ä‡∏∑‡πà‡∏≠ Theme ‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô‡∏°‡∏≤‡∏ï‡∏£‡∏ê‡∏≤‡∏ô (Midnight) ‡πÅ‡∏•‡∏∞‡πÑ‡∏°‡πà‡πÉ‡∏™‡πà‡∏Ñ‡πà‡∏≤‡∏™‡∏µ‡∏ã‡πâ‡∏≠‡∏ô
local Window = Library.CreateLib("U-HUB SUPREME üíé", "Midnight")

-- [ ‡∏™‡∏£‡πâ‡∏≤‡∏á Tab ‡πÅ‡∏•‡∏∞ Section ]
local MainTab = Window:NewTab("‡∏ü‡∏≤‡∏£‡πå‡∏° & ‡∏ö‡∏≠‡∏™")
local MainSection = MainTab:NewSection("‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏•‡∏±‡∏Å")

_G.AutoFarm = false
_G.FastAttack = false

MainSection:NewToggle("‡πÄ‡∏õ‡∏¥‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°‡πÄ‡∏•‡πÄ‡∏ß‡∏•", "‡∏ï‡∏µ‡∏°‡∏≠‡∏ô‡∏™‡πÄ‡∏ï‡∏≠‡∏£‡πå", function(v)
    _G.AutoFarm = v
end)

MainSection:NewToggle("‡∏ï‡∏µ‡πÄ‡∏£‡πá‡∏ß (Fast Attack)", "‡∏ä‡πà‡∏ß‡∏¢‡∏•‡∏î‡∏≠‡∏≤‡∏Å‡∏≤‡∏£‡∏´‡∏ô‡πà‡∏ß‡∏á", function(v)
    _G.FastAttack = v
end)

-- [[ ‡∏£‡∏∞‡∏ö‡∏ö‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô (‡∏õ‡∏£‡∏±‡∏ö‡∏õ‡∏£‡∏∏‡∏á‡πÉ‡∏´‡∏°‡πà‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏Ñ‡πâ‡∏≤‡∏á) ]]
task.spawn(function()
    while true do
        task.wait(0.1) -- ‡πÉ‡∏™‡πà‡∏î‡∏µ‡πÄ‡∏•‡∏¢‡πå‡∏ô‡∏¥‡∏î‡∏´‡∏ô‡πà‡∏≠‡∏¢‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ Log DMG ‡πÄ‡∏î‡πâ‡∏á‡∏£‡∏±‡∏ß‡∏à‡∏ô‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏Å‡∏£‡∏∞‡∏ï‡∏∏‡∏Å
        if _G.AutoFarm then
            pcall(function()
                game:GetService("ReplicatedStorage").Remotes.Combat:FireServer()
                game:GetService("VirtualUser"):Button1Down(Vector2.new(0,0))
            end)
        end
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏î‡∏õ‡∏¥‡∏î/‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π (‡∏õ‡∏∏‡πà‡∏° U)
game:GetService("UserInputService").InputBegan:Connect(function(input, processed)
    if not processed and input.KeyCode == Enum.KeyCode.U then
        Library:toggleGui()
    end
end)

print("U-HUB FIXED: ‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß!")
