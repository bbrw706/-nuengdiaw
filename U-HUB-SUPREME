local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("U-HUB SUPREME üíé (AUTO FARM)", "Midnight")

_G.AutoFarm = false
_G.SelectWeapon = "Melee"

local MainTab = Window:NewTab("Main/Boss")
local MainSection = MainTab:NewSection("‡∏£‡∏∞‡∏ö‡∏ö‡∏ü‡∏≤‡∏£‡πå‡∏°‡∏´‡∏•‡∏±‡∏Å")

MainSection:NewToggle("‡πÄ‡∏õ‡∏¥‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°‡πÄ‡∏•‡πÄ‡∏ß‡∏•", "‡∏ö‡∏¥‡∏ô‡πÑ‡∏õ‡∏´‡∏≤‡∏°‡∏≠‡∏ô‡∏™‡πÄ‡∏ï‡∏≠‡∏£‡πå‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥", function(v)
    _G.AutoFarm = v
end)

-- [[ ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ö‡∏¥‡∏ô‡∏ß‡∏≤‡∏£‡πå‡∏õ (Tween) ]]
function TweenTo(Pos)
    local Distance = (Pos.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
    local Speed = 300 -- ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ö‡∏¥‡∏ô
    local Tween = game:GetService("TweenService"):Create(game.Players.LocalPlayer.Character.HumanoidRootPart, TweenInfo.new(Distance/Speed, Enum.EasingStyle.Linear), {CFrame = Pos})
    Tween:Play()
    if Distance <= 300 then Tween:Cancel() game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = Pos end
end

-- [[ ‡∏£‡∏∞‡∏ö‡∏ö‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏°‡∏≠‡∏ô‡∏™‡πÄ‡∏ï‡∏≠‡∏£‡πå‡πÅ‡∏•‡∏∞‡∏ß‡∏≤‡∏£‡πå‡∏õ ]]
task.spawn(function()
    while task.wait() do
        if _G.AutoFarm then
            pcall(function()
                -- ‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏®‡∏±‡∏ï‡∏£‡∏π‡∏ó‡∏µ‡πà‡πÉ‡∏Å‡∏•‡πâ‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î‡∏´‡∏£‡∏∑‡∏≠‡∏ï‡∏≤‡∏°‡πÄ‡∏•‡πÄ‡∏ß‡∏• (‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏•‡πÄ‡∏ß‡∏• 1)
                for i,v in pairs(workspace.Enemies:GetChildren()) do
                    if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                        -- ‡∏ö‡∏¥‡∏ô‡πÑ‡∏õ‡∏´‡∏≤‡∏°‡∏≠‡∏ô‡∏™‡πÄ‡∏ï‡∏≠‡∏£‡πå
                        TweenTo(v.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0))
                        
                        -- ‡πÇ‡∏à‡∏°‡∏ï‡∏µ
                        game:GetService("ReplicatedStorage").Remotes.Combat:FireServer()
                    end
                end
            end)
        end
    end
end)
