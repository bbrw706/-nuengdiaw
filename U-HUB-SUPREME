--[[ 
    üíé U-HUB MARU [FULL SETTINGS EDITION]
    - ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏´‡∏ô‡πâ‡∏≤ Settings (‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤) ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏õ‡∏¥‡∏î-‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π
    - ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ö‡∏±‡∏Ñ UI ‡∏Ñ‡πâ‡∏≤‡∏á ‡∏Å‡∏î‡∏õ‡∏¥‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°‡πÑ‡∏î‡πâ‡∏•‡∏∑‡πà‡∏ô‡πÜ
]]

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local LP = game.Players.LocalPlayer
local VIM = game:GetService("VirtualInputManager")

local Window = Fluent:CreateWindow({
    Title = "U-HUB SUPREME üíé",
    SubTitle = "BY Neung (Full Settings)",
    TabWidth = 160, Size = UDim2.fromOffset(580, 460),
    Acrylic = false, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl -- ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏Ñ‡∏∑‡∏≠ Ctrl ‡∏Ç‡∏ß‡∏≤
})

-- [ üìë ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡πÄ‡∏°‡∏ô‡∏π ]
local Tabs = { 
    Main = Window:AddTab({ Title = "‡∏ü‡∏≤‡∏£‡πå‡∏°‡∏´‡∏•‡∏±‡∏Å", Icon = "sword" }),
    Config = Window:AddTab({ Title = "‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå", Icon = "settings" }) -- ‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏´‡∏ô‡∏∂‡πà‡∏á‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£
}
local Options = Fluent.Options

-- [[ ‚öîÔ∏è ‡∏´‡∏ô‡πâ‡∏≤‡∏ü‡∏≤‡∏£‡πå‡∏°‡∏´‡∏•‡∏±‡∏Å ]]
Tabs.Main:AddToggle("AutoFarm", {Title = "‡πÄ‡∏õ‡∏¥‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡∏ü‡∏≤‡∏£‡πå‡∏°", Default = false})
Tabs.Main:AddSlider("Height", {Title = "‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á", Default = 5, Min = 1, Max = 15, Rounding = 1})

-- [[ ‚öôÔ∏è ‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ (Settings) ]]
Tabs.Config:AddKeybind("MinimizeBind", {
    Title = "‡∏õ‡∏∏‡πà‡∏° ‡∏ã‡πà‡∏≠‡∏ô/‡πÇ‡∏ä‡∏ß‡πå ‡πÄ‡∏°‡∏ô‡∏π",
    Default = "RightControl",
    ChangedCallback = function(Value)
        Window.MinimizeKey = Value
        Fluent:Notify({Title = "U-HUB", Content = "‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏°‡∏ô‡∏π‡πÄ‡∏õ‡πá‡∏ô: " .. tostring(Value), Duration = 3})
    end
})

Tabs.Config:AddButton({
    Title = "‡∏õ‡∏¥‡∏î‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î",
    Description = "‡∏•‡∏ö‡πÄ‡∏°‡∏ô‡∏π‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠",
    Callback = function()
        Window:Destroy()
    end
})

-- [[ ü§ñ ‡∏£‡∏∞‡∏ö‡∏ö‡∏ü‡∏≤‡∏£‡πå‡∏° (‡∏•‡∏∑‡πà‡∏ô‡∏û‡∏¥‡πÄ‡∏®‡∏© ‡πÑ‡∏°‡πà‡∏Ñ‡πâ‡∏≤‡∏á) ]]
task.spawn(function()
    while true do
        task.wait(0.01)
        if Options.AutoFarm.Value then
            pcall(function()
                local Char = LP.Character
                local Root = Char:FindFirstChild("HumanoidRootPart")
                if not Root then return end

                local Target = nil
                for _, v in pairs(workspace.Enemies:GetChildren()) do
                    if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                        Target = v; break
                    end
                end

                if Target then
                    -- ‡∏ö‡∏¥‡∏ô‡πÅ‡∏•‡∏∞‡∏•‡πá‡∏≠‡∏Ñ‡∏ï‡∏±‡∏ß
                    Root.CFrame = Target.HumanoidRootPart.CFrame * CFrame.new(0, Options.Height.Value, 0) * CFrame.Angles(math.rad(-90), 0, 0)
                    Root.Velocity = Vector3.new(0,0,0)
                    
                    if not Root:FindFirstChild("SmoothHold") then
                        local bv = Instance.new("BodyVelocity", Root)
                        bv.Name = "SmoothHold"; bv.MaxForce = Vector3.new(9e9, 9e9, 9e9); bv.Velocity = Vector3.new(0,0,0)
                    end

                    -- ‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö‡∏ï‡∏µ
                    local Tool = Char:FindFirstChildOfClass("Tool")
                    if Tool then Tool:Activate() end
                    VIM:SendMouseButtonEvent(0, 0, 0, true, game, 1)
                    VIM:SendMouseButtonEvent(0, 0, 0, false, game, 1)
                end
            end)
        else
            -- ‡πÄ‡∏Ñ‡∏•‡∏µ‡∏¢‡∏£‡πå‡∏£‡∏∞‡∏ö‡∏ö‡∏ö‡∏¥‡∏ô‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏õ‡∏¥‡∏î
            pcall(function()
                if LP.Character.HumanoidRootPart:FindFirstChild("SmoothHold") then
                    LP.Character.HumanoidRootPart.SmoothHold:Destroy()
                end
            end)
        end
    end
end)

Fluent:Notify({
    Title = "U-HUB READY",
    Content = "‡∏°‡∏µ‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÉ‡∏´‡πâ‡πÅ‡∏•‡πâ‡∏ß‡∏ô‡∏∞‡∏´‡∏ô‡∏∂‡πà‡∏á! ‡∏Å‡∏î‡∏ó‡∏µ‡πà‡∏£‡∏π‡∏õ‡πÄ‡∏ü‡∏∑‡∏≠‡∏á‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢",
    Duration = 5
})
