--[[ 
    üíé U-HUB MARU [STEALTH & PVP EDITION]
    - ‡∏õ‡∏∏‡πà‡∏°‡∏ã‡πà‡∏≠‡∏ô‡πÄ‡∏°‡∏ô‡∏π (Hide UI) ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏ô‡∏µ‡∏¢‡∏ô
    - ‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏¢‡∏∏‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°‡∏ó‡∏±‡∏ô‡∏ó‡∏µ (Emergency Stop)
    - ‡∏õ‡∏£‡∏±‡∏ö‡πÅ‡∏ï‡πà‡∏á‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏õ‡∏¥‡∏î-‡∏õ‡∏¥‡∏î‡πÑ‡∏î‡πâ‡πÄ‡∏≠‡∏á
]]

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local LP = game.Players.LocalPlayer
local VIM = game:GetService("VirtualInputManager")
local RunService = game:GetService("RunService")

local Window = Fluent:CreateWindow({
    Title = "U-HUB SUPREME üíé",
    SubTitle = "BY Neung [Stealth Mode]",
    TabWidth = 160, Size = UDim2.fromOffset(580, 460),
    Acrylic = false, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏µ‡πà‡∏´‡∏ô‡∏∂‡πà‡∏á‡∏ñ‡∏ô‡∏±‡∏î‡πÑ‡∏î‡πâ (‡πÄ‡∏ä‡πà‡∏ô LeftControl ‡∏´‡∏£‡∏∑‡∏≠ U)
})

local Tabs = { 
    Main = Window:AddTab({ Title = "‡∏ü‡∏≤‡∏£‡πå‡∏°‡∏´‡∏•‡∏±‡∏Å", Icon = "sword" }),
    Config = Window:AddTab({ Title = "‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏£‡∏∞‡∏ö‡∏ö", Icon = "settings" }) 
}
local Options = Fluent.Options

-- [[ ‚öîÔ∏è ‡πÄ‡∏°‡∏ô‡∏π‡∏ü‡∏≤‡∏£‡πå‡∏° ]]
Tabs.Main:AddToggle("AutoFarm", {Title = "‡πÄ‡∏õ‡∏¥‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡∏ü‡∏≤‡∏£‡πå‡∏°", Default = false})
Tabs.Main:AddSlider("Height", {Title = "‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á", Default = 5, Min = 1, Max = 15, Rounding = 1})

-- [[ ‚öôÔ∏è ‡πÄ‡∏°‡∏ô‡∏π‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏ô‡∏µ‡∏¢‡∏ô (PVP Friendly) ]]
Tabs.Config:AddKeybind("MinimizeBind", {
    Title = "‡∏õ‡∏∏‡πà‡∏°‡∏ã‡πà‡∏≠‡∏ô‡πÄ‡∏°‡∏ô‡∏π (Hide UI)",
    Default = "RightControl", -- ‡∏´‡∏ô‡∏∂‡πà‡∏á‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏õ‡∏∏‡πà‡∏°‡πÑ‡∏î‡πâ‡πÉ‡∏ô‡πÄ‡∏Å‡∏°‡πÄ‡∏•‡∏¢
    ChangedCallback = function(New)
        Window.MinimizeKey = New
    end
})

Tabs.Config:AddButton({
    Title = "‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏∏‡∏Å‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ó‡∏±‡∏ô‡∏ó‡∏µ (Emergency Stop)",
    Description = "‡∏Å‡∏î‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏Ñ‡∏ô‡∏°‡∏≤‡∏´‡∏≤ ‡∏´‡∏£‡∏∑‡∏≠‡∏ï‡∏≠‡∏ô‡∏à‡∏∞ PVP",
    Callback = function()
        Options.AutoFarm:SetValue(false) -- ‡∏õ‡∏¥‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°
        pcall(function()
            if LP.Character.HumanoidRootPart:FindFirstChild("SmoothHold") then
                LP.Character.HumanoidRootPart.SmoothHold:Destroy() -- ‡∏•‡∏ö‡πÅ‡∏£‡∏á‡∏•‡∏≠‡∏¢‡∏ï‡∏±‡∏ß‡∏≠‡∏≠‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
            end
        end)
        Fluent:Notify({Title = "U-HUB", Content = "‡∏´‡∏¢‡∏∏‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÅ‡∏•‡πâ‡∏ß!", Duration = 3})
    end
})

-- [[ ü•ä ‡∏£‡∏∞‡∏ö‡∏ö‡πÇ‡∏à‡∏°‡∏ï‡∏µ‡πÅ‡∏•‡∏∞‡∏ü‡∏≤‡∏£‡πå‡∏° (‡∏ä‡∏∏‡∏î‡πÄ‡∏î‡∏¥‡∏°‡∏ó‡∏µ‡πà‡πÅ‡∏Å‡πâ‡πÉ‡∏´‡πâ‡∏ï‡∏µ‡πÅ‡∏£‡∏á) ]]
RunService.Stepped:Connect(function()
    if Options.AutoFarm.Value then
        pcall(function()
            local Char = LP.Character
            local Root = Char:FindFirstChild("HumanoidRootPart")
            local Target = nil
            
            for _, v in pairs(workspace.Enemies:GetChildren()) do
                if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                    Target = v; break
                end
            end

            if Target then
                Root.CFrame = Target.HumanoidRootPart.CFrame * CFrame.new(0, Options.Height.Value, 0) * CFrame.Angles(math.rad(-90), 0, 0)
                Root.Velocity = Vector3.new(0,0,0)
                
                -- ‡∏ï‡∏µ
                local Tool = Char:FindFirstChildOfClass("Tool")
                if Tool then Tool:Activate() end
                VIM:SendMouseButtonEvent(0, 0, 0, true, game, 1)
                VIM:SendMouseButtonEvent(0, 0, 0, false, game, 1)

                if not Root:FindFirstChild("SmoothHold") then
                    local bv = Instance.new("BodyVelocity", Root)
                    bv.Name = "SmoothHold"
                    bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
                    bv.Velocity = Vector3.new(0,0,0)
                end
            end
        end)
    else
        -- ‡∏•‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏ö‡∏¥‡∏ô‡∏≠‡∏≠‡∏Å‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏ü‡∏≤‡∏£‡πå‡∏°
        pcall(function()
            if LP.Character.HumanoidRootPart:FindFirstChild("SmoothHold") then
                LP.Character.HumanoidRootPart.SmoothHold:Destroy()
            end
        end)
    end
end)

Fluent:Notify({
    Title = "U-HUB STEALTH",
    Content = "‡∏Å‡∏î Ctrl ‡∏Ç‡∏ß‡∏≤ ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ã‡πà‡∏≠‡∏ô‡πÄ‡∏°‡∏ô‡∏π‡∏ô‡∏∞‡∏´‡∏ô‡∏∂‡πà‡∏á!",
    Duration = 5
})
